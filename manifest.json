{
	"manifest_version": 2,
	"name": "Download Shelf",
	"version": "2.0",
	"author": "Axel Forsman",
	"description": "Pimps your downloads.",

	"icons": {
		"48": "icon.png"
	},

	"permissions": [
		"downloads",
		"downloads.open",
		"tabs",
		"history",
		"storage"
	],

	"background": {
		"scripts": ["shared.js", "background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"match_about_blank": true,
			"run_at": "document_start",
			"js": ["shared.js", "content.js"]
		}
	],

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},

	"applications": {
		"gecko": {
			"id": "{a18943fe-b50c-4191-8104-552f1d9fe1d2}",
			"strict_min_version": "63.0"
		}
	},

	"web_accessible_resources": ["images/*"]
}
